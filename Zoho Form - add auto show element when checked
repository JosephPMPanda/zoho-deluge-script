<form>
  <input id="toggler1" type="checkbox">
  <div style="display:none" id="elementToToggle1"></div>
  .....
</form>
<script>
  function toggleVisibility(eventsender, idOfObjectToToggle) {
    var myNewState = "none";
    if (eventsender.checked === true) {
      myNewState = "flex";
    }

    document.getElementById(idOfObjectToToggle).style.display = myNewState;
  }
  let toggler1 = document.getElementById('toggler1');
  toggler1.addEventListener('click', (e) => { toggleVisibility(toggler1, 'elementToToggle1') })
</script>
